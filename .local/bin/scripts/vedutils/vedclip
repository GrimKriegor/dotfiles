#!/bin/bash

input_file="$1"
start_time="$2"
end_time="$3"
output_file="$4"

input_file_name="${input_file%.*}"
input_file_ext="${input_file##*.}"

[[ -z $output_file ]] && \
  output_file="clip_$input_file_name.$input_file_ext"

ffmpeg \
  -i "$input_file" \
  -ss $start_time \
  -to $end_time \
  -c:v copy \
  -c:a copy \
  "$output_file"
