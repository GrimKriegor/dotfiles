#!/bin/sh
while read file
do
  case "$1" in

  # Edit
  "C-e")
    gimp "$file" ;;

  # Copy path
  "C-c")
    echo "$file" | xclip -sel clip ;;

  # Copy to home
  "C-h")
    cp "$file" ~ ;;

  # Rotate 90 degrees
  "C-r")
    convert -rotate 90 "$file" "$file" ;;

  # Set as wallpaper
  "C-w")
    set-wallpaper "$file" ;;

  # Share
  "C-s")
    quickshare default "$file" ;;

  esac
done
