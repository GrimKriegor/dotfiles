#!/bin/sh

xrandr \
  --output DisplayPort-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
  --output DisplayPort-1 --off \
  --output DisplayPort-2 --off \
  --output HDMI-A-0 --off

input-leapc -n kersthor velok &
renice -n -10 -p $(pidof input-leap{s,c})

setxkbmap $(setxkbmap -query | grep "^layout:" | awk -F ": *" '{print $2}')
DISPLAY=:0 numlockx on

killall -9 picom

sleep 5 && pactl load-module module-tunnel-sink server=tcp:velok &
