command=/usr/libexec/i3blocks/$BLOCK_NAME
align=center
separator=true
separator_block_width=25
color=#cccccc
markup=none

[windowname]
align=center
command=sleep .25; xdotool getwindowfocus getwindowname
interval=repeat
min_width=0

[cpubars]
command=$SCRIPT_DIR/cpubars
interval=2
separator=false
separator_block_width=4

[membars]
command=$SCRIPT_DIR/membars
interval=5
markup=pango

[time]
command=date '+%b %d - %H:%M'
interval=5

[muttmail]
command=$SCRIPT_DIR/muttmail
interval=60
markup=pango
separator=false
separator_block_width=12

[battery]
command=$SCRIPT_DIR/battery
markup=pango
interval=30
separator=false
separator_block_width=12

