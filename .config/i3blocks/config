command=/usr/libexec/i3blocks/$BLOCK_NAME
align=center
separator=true
separator_block_width=25
color=#cccccc
markup=none

[windowname]
align=center
command=sleep .25; xdotool getwindowfocus getwindowname
interval=repeat
min_width=0

[bandwidth]
command=$SCRIPT_DIR/multibandwidth -i '' -o ''
markup=pango
interval=5

[cpubars]
command=$SCRIPT_DIR/cpubars2
interval=persist
markup=pango
separator=false
separator_block_width=4

[membars]
command=$SCRIPT_DIR/membars
interval=5
markup=pango

[time]
command=date '+%b %d - %H:%M'
interval=5

[volume-pulseaudio]
command=SUBSCRIBE=1 LONG_FORMAT='${SYMB}' MUTED_COLOR=#444444 $SCRIPT_DIR/volume-pulseaudio
interval=persist
signal=1
markup=pango
separator=false
separator_block_width=10

[muttmail]
command=$SCRIPT_DIR/muttmail
interval=60
markup=pango
separator=false
separator_block_width=12

[battery]
command=$SCRIPT_DIR/battery
markup=pango
interval=30
separator=false
separator_block_width=12

[tray]
