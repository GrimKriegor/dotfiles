#------------------------------
# .dotfiles operations
#------------------------------
alias dfc='cd ~/.dotfiles'
alias dfu='echo "Updating dotfiles" && workdir=$(pwd) && cd ~/.dotfiles && git pull && cd $workdir'

#------------------------------
# User scripts
#------------------------------
export PATH="$HOME/.scripts:${PATH}"

#------------------------------
# Aliases
#------------------------------
if [ -f $HOME/.shell_aliases ]; then
  source $HOME/.shell_aliases
fi

alias x='startx'

#------------------------------
# Variables
#------------------------------
export BROWSER="iceweasel"
export EDITOR="vim"

#------------------------------
# Window title
#------------------------------
case $TERM in
  termite|*xterm*|rxvt|rxvt-unicode|rxvt-256color|rxvt-unicode-256color|(dt|k|E)term)
    precmd () {
      print -Pn "\e]0;[%n@%M][%~]%#\a"
    }
    preexec () { print -Pn "\e]0;[%n@%M][%~]%# ($1)\a" }
    ;;
  screen|screen-256color)
    precmd () {
      print -Pn "\e]83;title \"$1\"\a"
      print -Pn "\e]0;$TERM - (%L) [%n@%M]%# [%~]\a"
    }
    preexec () {
      print -Pn "\e]83;title \"$1\"\a"
      print -Pn "\e]0;$TERM - (%L) [%n@%M]%# [%~] ($1)\a"
    }
    ;;
esac

#------------------------------
# Program configuration
#------------------------------

# GTK Theme
export GTK_THEME=numix-black:dark

# Android home
export ANDROID_HOME=/opt/android-sdk
export ANDROID_SDK_ROOT="$ANDROID_HOME"
export PATH=$PATH:$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/tools/bin

# Vagrant provider
export VAGRANT_DEFAULT_PROVIDER=libvirt

# Node modules location
export NODE_PATH="$HOME"/.node_modules
